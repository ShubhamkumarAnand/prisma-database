// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  isAdmin Boolean
  prefrences Json
  writtenPosts Post[] @relation("writtenPosts")
  favoritePost Post[] @relation("favoritePost")
}

model Post{
  id String @id @default(uuid())
  rating Float
  createdAt DateTime
  updatedAt DateTime
  author User @relation("writtenPosts", fields: [authorId], references: [id])
  authorId String
  favoratedBy User @relation("favoritePost", fields: [favoratedById], references: [id])
  favoratedById String
}
